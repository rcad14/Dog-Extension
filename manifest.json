{
    "manifest_version": 3,
    "name": "Random Dog Images",
    "description": "Inject random dog images into web pages",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/dog.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["style.css"],
        "matches": ["<all_urls>"]
      }
    ]
  
  }